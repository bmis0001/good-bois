<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".ui.DoggieDetailFragment">

    <ImageView
        android:id="@+id/breed_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="H,4:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/breed_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/boundary_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/detail_page_name_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breed_image" />

    <TextView
        android:id="@+id/breed_origin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/boundary_margin"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/boundary_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/detail_page_detail_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breed_name" />

    <TextView
        android:id="@+id/breed_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/boundary_margin"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/boundary_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/detail_page_detail_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breed_origin" />

    <TextView
        android:id="@+id/breed_temperament"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/boundary_margin"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/boundary_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/detail_page_detail_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breed_age" />

    <TextView
        android:id="@+id/breed_bred_for"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/boundary_margin"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/boundary_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/detail_page_detail_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breed_temperament" />
</androidx.constraintlayout.widget.ConstraintLayout>